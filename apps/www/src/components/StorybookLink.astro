---
interface Props {
  url?: string;
  storyPath?: string;
}

const { url, storyPath } = Astro.props;
const storybookUrl = url || (storyPath ? `https://storybook.example.com/?path=/story/${storyPath}` : '#');
---

<a
  href={storybookUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="storybook-link"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
    <polyline points="15 3 21 3 21 9"></polyline>
    <line x1="10" y1="14" x2="21" y2="3"></line>
  </svg>
  Open in Storybook
</a>

<style>
  .storybook-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: #ff4785;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    font-weight: 500;
    transition: background-color 0.2s;
  }
  .storybook-link:hover {
    background-color: #e6396f;
  }
  .storybook-link svg {
    flex-shrink: 0;
  }
</style>

