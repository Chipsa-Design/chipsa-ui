{
    "name": "chipsa-ui",
    "version": "0.0.1",
    "description": "A UI library for modern web apps.",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build:core": "npm run build -w @chipsa-ui/core",
        "build:react": "npm run build -w @chipsa-ui/react",
        "build:astro": "npm run build -w @chipsa-ui/astro",
        "test": "echo \"Error: no test specified\" && exit 1",
        "format": "prettier --ignore-unknown --write \"**/*\""
    },
    "keywords": [
        "components",
        "design",
        "frontend",
        "library",
        "ui",
        "ui-kit"
    ],
    "author": "chipsadesign",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^24.5.2",
        "tsx": "^4.20.5",
        "vite": "^7.1.7",
        "vite-plugin-dts": "^4.5.4"
    }
}
