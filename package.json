{
    "name": "chipsa-ui",
    "version": "0.0.1",
    "description": "A UI library for modern web apps.",
    "private": true,
    "scripts": {
        "build:core": "pnpm --filter @chipsa-ui/core build",
        "build:react": "pnpm --filter @chipsa-ui/react build",
        "build:astro": "pnpm --filter @chipsa-ui/astro build",
        "build": "pnpm -r build",
        "build:registry": "pnpm --filter www build:registry",
        "publish:core": "pnpm --filter @chipsa-ui/core publish",
        "test": "echo \"Error: no test specified\" && exit 1",
        "format": "prettier --ignore-unknown --write \"**/*\""
    },
    "keywords": [
        "components",
        "design",
        "frontend",
        "library",
        "ui",
        "ui-kit"
    ],
    "author": "chipsadesign",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^24.5.2",
        "concurrently": "^9.2.1",
        "tsx": "^4.20.5",
        "vite": "^7.1.7",
        "vite-plugin-dts": "^4.5.4"
    }
}
